//Viet chuong trinh kiem tra mot so nguyen duong n nhap tu ban phim co phai la so hoan hao hay khong
class PerfectNumber
{
    public static boolean isPerfect(int n)
    {
        // begin edit
		if (n < 5) {
			return false;
		}
		
		int sum = 0;
		
		for (int i = 1; i <= n/2; i++){
			if (n % i == 0) {
				sum += i;
			}
		}
		return sum == n;
        //end edit
        
    }
    public static void main(String []args)
    {
        
    }
    
}
